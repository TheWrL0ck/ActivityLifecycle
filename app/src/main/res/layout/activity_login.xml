<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <ImageView
        android:id="@+id/imgAven"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/avg"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:id="@+id/etUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Phone Number"
        android:textColorHint="#000000"
        android:textSize="20sp"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:inputType="number"
        android:maxLength="10"
        android:maxLines="1"
        android:layout_below="@id/imgAven"
        />
    <EditText
        android:id="@+id/etPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Password"
        android:textColorHint="#000000"
        android:textSize="20sp"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:maxLength="15"
        android:maxLines="1"
        android:inputType="textPassword"
        android:layout_below="@id/etUser"
        />
    <Button
        android:id="@+id/btnLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="60sp"
        android:background="#c2185b"
        android:text="Log In"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_below="@id/etPass"
        />
    <TextView
        android:id="@+id/txtFor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_centerInParent="true"
        android:layout_below="@id/btnLog"/>
    <TextView
        android:id="@+id/txtSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:layout_gravity="center"
        android:padding="15dp"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true" />
</RelativeLayout>