<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imgGoogle"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/google"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/txtSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imgGoogle"/>
    <TextView
        android:id="@+id/txtWith"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="with your Google Account"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txtSign"/>
    <EditText
        android:id="@+id/txtUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username or Email"
        android:textColorHint="#B3B6B7"
        android:textSize="20sp"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:inputType="text"
        android:layout_below="@id/txtWith" />
    <TextView
        android:id="@+id/txtFor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot email?"
        android:textSize="15sp"
        android:textColor="#3498DB"
        android:layout_marginLeft="22dp"
        android:layout_below="@id/txtUser"/>
    <TextView
        android:id="@+id/txtCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create account"
        android:textSize="15sp"
        android:layout_margin="20dp"
        android:textColor="#3498DB"
        android:layout_alignParentBottom="true"/>
    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#33AAFF"
        android:text="Next"
        android:textColor="#ffffff"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>